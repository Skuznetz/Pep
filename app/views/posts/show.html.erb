<article class="post">
<section class="post-head">
  <h2><%=  @post.title %></h2>
  <small>
  <time><%= @post.created_at.to_date.strftime("%d %B,%Y")%></time> 
    <% if @post.category.present? %>
    |
    <%= link_to @post.category.name,@post.category %>
    <% end %>
    |
    <%= link_to 'Изменить', edit_post_path(@post)%>
    |
    <%= link_to 'удалить', post_path(@post), method: :delete, data: { confirm: 'Вы уверены в этом?'} %>

  </small>
</section>

<section class="post-body">

  <%= image_tag @post.image.url(:thumb), class: 'img-show' if @post.image? %>
  <%= @post.body.html_safe %>
</section>
</article>

<%= render 'disqus' %>